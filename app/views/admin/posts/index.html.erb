<h1>Listing posts</h1>

<table id="datatable">
  <thead>
    <tr>
      <th>Title</th>
      <th>Slug</th>
      <th>Content</th>
      <th>Published</th>
      <th>Visibility</th>
      <th>Published on</th>
      <th>Unpublished on</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.slug %></td>
        <td><%= post.content %></td>
        <td><%= post.published %></td>
        <td><%= post.visibility %></td>
        <td><%= post.published_on %></td>
        <td><%= post.unpublished_on %></td>
        <td><%= link_to 'Show', [:admin, post] %></td>
        <td><%= link_to 'Edit', edit_admin_post_path(post) %></td>
        <td><%= link_to 'Destroy', [:admin, post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

